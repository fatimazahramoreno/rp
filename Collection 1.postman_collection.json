	"item": [
		{
			"name": "Get all projects",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const response = pm.response.json();\r",
							"\r",
							"let projects = response.map(p => p.name);\r",
							"\r",
							"\r",
							"// On normalise les noms (supprime la casse + espaces spéciaux)\r",
							"const normalize = s => s.replace(/\\u00A0/g, \" \").toLowerCase();\r",
							"\r",
							"// On cherche l’index du projet\r",
							"const index = projects.findIndex(\r",
							"    p => normalize(p) === normalize(\"Mon projet Scrum\")\r",
							");\r",
							"\r",
							"// On stocke l’ID du projet\r",
							"pm.collectionVariables.set(\"projectId\", response[index].id);\r",
							"pm.collectionVariables.set(\"projectKey\", response[index].key);\r",
							"\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "basic",
